<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        let b;
let premiummember;
b = parseFloat(prompt("Enter your bill:"));
premiummember = prompt("Are you a premium member (yes or no)?");

let discount = 0;  
if (b >= 100) {
    discount = 20;  
    document.write("20% discount on your bill!!<br>");
} else if (b > 50) {
    discount = 10;  
    document.write("10% discount on your bill!!<br>");
}

if (premiummember.toLowerCase() === "yes") {
    discount += 5; 
    document.write("You got an extra 5% discount as a premium member!!<br>");
}

let finalAmount = b - (b * discount / 100);
document.write("Final amount to pay: " + finalAmount);

    </script>
</body>
</html>
